{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "http://localhost:3000",
  "resourcePath": "news",
  "apis": [
    {
      "path": "/news/wall_message.json",
      "operations": [
        {
          "summary": "Creates a wall message for yourself, friend, assoc or event",
          "notes": "You need to chose between assoc_id, event_id & friend_id",
          "parameters": [
            {
              "paramType": "query",
              "name": "token",
              "type": "string",
              "description": "Your token",
              "required": true
            },
            {
              "paramType": "query",
              "name": "content",
              "type": "string",
              "description": "Content of status",
              "required": true
            },
            {
              "paramType": "query",
              "name": "friend_id",
              "type": "integer",
              "description": "Friend's id",
              "required": false
            },
            {
              "paramType": "query",
              "name": "assoc_id",
              "type": "integer",
              "description": "Association's id",
              "required": false
            },
            {
              "paramType": "query",
              "name": "event_id",
              "type": "integer",
              "description": "Event's id",
              "required": false
            },
            {
              "paramType": "query",
              "name": "public",
              "type": "boolean",
              "description": "false to make it private",
              "required": false
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "Ok"
            }
          ],
          "nickname": "News#wall_message",
          "method": "post"
        }
      ]
    },
    {
